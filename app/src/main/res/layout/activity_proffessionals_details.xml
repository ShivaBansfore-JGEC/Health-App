<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shiva.healthapp.ProffessionalsDetails">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#009688">

        <TextView
            android:id="@+id/tv_prof_name_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Amrita Singh"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_field_details"
            android:layout_below="@id/tv_prof_name_details"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="professional Yoga Trainer"
            android:textColor="@color/white"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_field_details"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Kolkata"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:id="@+id/iv_profile_proffDetail"
    android:layout_centerHorizontal="true"
    android:src="@drawable/proff7"
    android:layout_marginTop="150dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear_contact"
        android:layout_marginTop="20dp"
        android:layout_below="@id/iv_profile_proffDetail">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact:"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textSize="13sp"
            android:text="GariyaHat,Kolkata,West Bengal,India"
            android:layout_marginLeft="25dp"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_email"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_below="@id/linear_contact">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textSize="13sp"
                android:text="amrita345@gmail.com"
                android:layout_marginLeft="35dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linaer_age"
            android:layout_marginTop="7dp"
            android:layout_below="@id/linear_email">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age:"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textSize="13sp"
                android:text="23"
                android:layout_marginLeft="45dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view_proff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#009688"
            android:layout_below="@id/linaer_age"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:layout_below="@id/view_proff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/about_amrita"
               android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="About Amrita"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/desc"
                android:fontFamily="sans-serif-light"
                android:layout_below="@id/about_amrita"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="She is an renowned Yoga Teacher in the city of Kolkata
,Currently working as a chief Yoga instructor in Gurukul Yoga Academy."/>
       <android.support.v7.widget.CardView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/desc"
           android:layout_marginBottom="10dp"
           android:layout_centerHorizontal="true"
           app:cardCornerRadius="15dp"
           android:layout_marginTop="25dp">
           <Button
               android:layout_width="200dp"
               android:layout_height="50dp"
               android:textAllCaps="false"
               android:background="#009688"
               android:textColor="@color/white"
               android:text="Ask For Number"/>
       </android.support.v7.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
</RelativeLayout>
