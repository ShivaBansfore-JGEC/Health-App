<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cordinator_layout"
    tools:context="com.example.shiva.healthapp.GymClubDetails">
    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_club_list">
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_club_list"
            android:background="@color/toolbarcolor">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/iv_cv_toolbar"
                    android:src="@drawable/home_cv"
                    android:layout_centerVertical="true"
                    android:onClick="cvToDashboard"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Club listing"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="70dp"
                    android:textStyle="bold|italic"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </LinearLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp">
        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/facebook_siemmer"
            app:duration="1000"
            android:layout_marginTop="56dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:orientation="vertical">
        <include layout="@layout/layout_shiemmer"/>
        <include layout="@layout/layout_shiemmer"/>
        <include layout="@layout/layout_shiemmer"/>
    </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:id="@+id/rv_club_details">
        </android.support.v7.widget.RecyclerView>
        </android.support.constraint.ConstraintLayout>
<android.support.design.widget.NavigationView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nav_club_list"
    android:layout_gravity="start"
    app:headerLayout="@layout/header_layout"
    app:menu="@menu/nav_menu"
    app:itemIconTint="#000000">
</android.support.design.widget.NavigationView>
    </android.support.v4.widget.DrawerLayout>
</android.support.design.widget.CoordinatorLayout>
