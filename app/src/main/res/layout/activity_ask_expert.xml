<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shiva.healthapp.AskExpert">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbarcolor"
        app:title="Ask Our Experts !"
        app:titleTextColor="@color/white"
        android:id="@+id/toolbar_askExpert">
    </android.support.v7.widget.Toolbar>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/et_phone_askExpert"
        android:background="@drawable/et_back"
        android:layout_marginLeft="10dp"
        android:inputType="number"
        android:drawableLeft="@drawable/et_phone"
        android:layout_below="@id/toolbar_askExpert"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginTop="100dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/et_email_askExpert"
        android:layout_below="@id/et_phone_askExpert"
        android:background="@drawable/et_back"
        android:layout_marginLeft="10dp"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/simple_email"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/et_query_askExpert"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/et_back"
        android:gravity="start"
        android:hint="write your query here!"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/et_email_askExpert"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="5dp"
        android:layout_below="@id/et_query_askExpert">
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btn_submit_askExpert"
        android:background="@color/toolbarcolor"
        android:text="submit"
        android:textColor="@color/white"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>
