<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_shop"
    tools:context="com.example.shiva.healthapp.Shop">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_shop"
            android:background="@color/toolbarcolor">
          <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_shop"
            android:layout_marginBottom="50dp"
            android:layout_below="@id/toolbar_shop">
        </android.support.v7.widget.RecyclerView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#eeeeee"
            android:id="@+id/bottom_root"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_sort_shop"
                    android:text="Sort"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/toolbarcolor"
                    android:gravity="center"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_filter_shop"
                    android:text="Filter"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/toolbarcolor"
                    android:gravity="center"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nav_view_shop"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/header_layout">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
