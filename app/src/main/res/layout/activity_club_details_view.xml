<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shiva.healthapp.ClubDetailsView">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:id="@+id/layout_banner_cdv"
        android:background="@drawable/banner2">
        <ss.com.bannerslider.views.BannerSlider
            android:id="@+id/banner_slider1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:interval="1000"
            app:defaultBanner="1"
            app:loopSlides="true"
            app:animateIndicators="true"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/iv_back_cv"
            android:onClick="goBack"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/left_arrow"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/iv_cdv"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/club_logo"/>
        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:id="@+id/iv_star_cdv"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_cdv"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/star_cv"
                android:elevation="10dp"
                android:layout_below="@id/iv_cdv"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/star_cv"
                android:elevation="10dp"
                android:layout_below="@id/iv_cdv"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/star_cv"
                android:elevation="10dp"
                android:layout_below="@id/iv_cdv"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/star_cv"
                android:elevation="10dp"
                android:layout_below="@id/iv_cdv"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/star_cv"
                android:elevation="10dp"
                android:layout_below="@id/iv_cdv"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_gymNmae_cdv"
            android:layout_below="@id/iv_star_cdv"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:text="STAR FITNESS"/>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="3dp"
            android:layout_alignParentRight="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_discount"
            android:onClick="getDiscount"
            android:background="@color/toolbarcolor"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/tag"
           />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Discount"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_gravity="center"
                android:textColor="@color/white"/>
        </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_cdv"
        android:background="@color/toolbarcolor"
        android:layout_below="@id/layout_banner_cdv">
    </android.support.v7.widget.Toolbar>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tablayout_cdv"
        app:tabTextColor="@color/white"
        app:tabGravity="fill"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabPadding="10dp"
        app:tabIndicatorColor="@color/white"
        android:layout_below="@id/layout_banner_cdv">
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewpager_cdv"
        android:layout_below="@id/tablayout_cdv">
    </android.support.v4.view.ViewPager>
</RelativeLayout>
